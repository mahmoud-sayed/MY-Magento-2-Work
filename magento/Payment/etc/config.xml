<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <payment>
            <bestresponsemedia_payment>
                <active>1</active>
                <model>BestResponseMedia\Payment\Model\Payment</model>
                <payment_action>authorize_capture</payment_action>
                <title>BestResponseMedia Payment Gateway</title>
                <merchant_gateway_key backend_model="Magento\Config\Model\Config\Backend\Encrypted" />
                <merchant_id backend_model="Magento\Config\Model\Config\Backend\Encrypted" />
                <public_key backend_model="Magento\Config\Model\Config\Backend\Encrypted" />
                <private_key backend_model="Magento\Config\Model\Config\Backend\Encrypted" />
                <cctypes>AE,VI,MC,DI,JCB</cctypes>
                <allowspecific>0</allowspecific>
                <min_order_total>1</min_order_total>
                <can_use_checkout>1</can_use_checkout>
            </bestresponsemedia_payment>
        </payment>
    </default>
</config>
